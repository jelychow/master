     <RelativeLayout
                android:id="@+id/payment_sendTime_rel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.0dip"
                android:clickable="true"
                android:padding="10.0dip" >

                <TextView
                    android:id="@+id/payment_sendTimeHint_text"
                    style="@style/style_16_666666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="送货时间：" />

                <TextView
                    android:id="@+id/payment_sendTimeValue_text"
                    style="@style/style_16_507FD8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dip"
                    android:layout_toRightOf="@id/payment_sendTimeHint_text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow4" />
            </RelativeLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:padding="10.0dip" >

        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="备注" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/et_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入少于10个字"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="添加备注"
                android:textColor="#cac9c4" />
        </LinearLayout>
    </LinearLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10.0dip" >

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="优惠券" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/et_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入少于10个字"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="请选择优惠券"
                android:textColor="#cac9c4" />
        </LinearLayout>
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" >

        <TextView
            android:id="@+id/tv_discount_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#d88842"
            android:gravity="center"
            android:text="满减优惠" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/et_discount_num" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入少于10个字"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="￥7"
                android:textColor="#d88842" />
        </LinearLayout>
    </LinearLayout>
      
      
    <ListView 
        android:layout_weight="0.5"
        android:id="@+id/ls_picked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
    </ListView>
<FrameLayout 
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10.0dip"
    >
     <TextView
            android:id="@+id/tv_order_cost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ad6321"
            android:gravity="center"
            android:text="￥23" />

        <Button
            android:id="@+id/btn_order_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即下单"
            android:background="#ad6321"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp" />

</FrameLayout>
</LinearLayout>